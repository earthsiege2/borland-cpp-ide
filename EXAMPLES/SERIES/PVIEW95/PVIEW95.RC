        BLOCK "040904E4"
        BEGIN
            VALUE "CompanyName", "Microsoft Corporation\0"
            VALUE "FileDescription", "Process Viewer Application\0"
            VALUE "FileVersion", "Version 4.0\0"
            VALUE "InternalName", "PView95\0"
