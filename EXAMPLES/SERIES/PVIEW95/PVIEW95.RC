#include "resource.h"

#if !defined (WORKSHOP_INVOKED)
#include "windows.h"
#endif

#include "globals.h"
#include "winver.h"

IDI_APPICON             ICON    DISCARDABLE     "pview95.ico"

IDB_TOOLBAR             BITMAP  DISCARDABLE     "toolbar.bmp"

IDC_RESIZE              CURSOR  DISCARDABLE     "resize.cur"

ABOUTBOX DIALOG DISCARDABLE  22, 17, 167, 73
STYLE DS_MODALFRAME | WS_CAPTION | WS_SYSMENU
CAPTION "About PView95"
FONT 8, "System"
BEGIN
    DEFPUSHBUTTON   "OK",IDOK,132,2,32,14,WS_GROUP
    ICON            IDI_APPICON,-1,3,2,18,20
    LTEXT           "CompanyName",IDD_VERFIRST,30,2,100,8
    LTEXT           "FileDescription",101,30,11,100,8
    LTEXT           "FileVersion",102,30,20,137,8
    LTEXT           "LegalCopyright",103,30,29,137,8
    LTEXT           "LegalTrademarks",IDD_VERLAST,30,47,136,27
    CONTROL         "",501,"Static",SS_BLACKRECT,29,43,138,1
END


PVIEW95 MENU DISCARDABLE 
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "E&xit",                       ID_FILE_EXIT
    END
    POPUP "&Process"
    BEGIN
        MENUITEM "&Refresh\tF5",                ID_PROCESS_REFRESH
        MENUITEM "&Kill",                       ID_PROCESS_KILL
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "&About...\tF1",               ID_HELP_ABOUT
    END
END


PVIEW95 ACCELERATORS MOVEABLE PURE 
BEGIN
    VK_F1,          ID_HELP_ABOUT,          VIRTKEY, NOINVERT
    VK_F5,          ID_PROCESS_REFRESH,     VIRTKEY, NOINVERT
    "Q",            ID_FILE_EXIT,           VIRTKEY, CONTROL
END


